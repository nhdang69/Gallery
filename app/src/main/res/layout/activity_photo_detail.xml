<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_name">

    </ImageView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

    <View
        android:id="@+id/vBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView">

    </View>

    <ImageView
        android:id="@+id/imgMore"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="24dp">
    </ImageView>

    <View
        android:id="@+id/vMore"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgMore"
        app:layout_constraintEnd_toEndOf="@+id/imgMore"
        app:layout_constraintStart_toStartOf="@+id/imgMore"
        app:layout_constraintTop_toTopOf="@+id/imgMore">

    </View>

    <ImageView
        android:id="@+id/imgLike"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/imgMore"
        app:layout_constraintTop_toTopOf="@id/imgMore"
        app:layout_constraintEnd_toStartOf="@id/vMore"
        app:srcCompat="@drawable/ic_star_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/app_name" />

    <View
        android:id="@+id/vLike"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgLike"
        app:layout_constraintEnd_toEndOf="@+id/imgLike"
        app:layout_constraintStart_toStartOf="@+id/imgLike"
        app:layout_constraintTop_toTopOf="@+id/imgLike">

    </View>

    <ImageView
        app:layout_constraintBottom_toBottomOf="@+id/vShare"
        app:layout_constraintEnd_toEndOf="@+id/vShare"
        app:layout_constraintStart_toStartOf="@+id/vShare"
        app:layout_constraintTop_toTopOf="@+id/vShare"
        app:srcCompat="@drawable/ic_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name">

    </ImageView>

    <View
        android:id="@+id/vShare"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize">

    </View>


</androidx.constraintlayout.widget.ConstraintLayout>